<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.majunpeng.jvnengwan.activity.L_LolActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/l_register_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#eeed5711">
        <RelativeLayout
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/l_image_back"
                android:src="@drawable/ic_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
           <LinearLayout
               android:id="@+id/l_linear"
               android:orientation="horizontal"
               android:layout_centerInParent="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
              <RelativeLayout
                  android:onClick="onClick"
                 android:id="@+id/l_relative_left"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:id="@+id/l_image_left"
                      android:src="@mipmap/tab_left_selected"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
                  <TextView
                      android:id="@+id/l_text_left"
                      android:layout_centerInParent="true"
                      android:textSize="20sp"
                      android:text="直播"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
              </RelativeLayout>
               <RelativeLayout
                   android:onClick="onClick"
                   android:id="@+id/l_relative_right"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:id="@+id/l_image_right"
                       android:src="@mipmap/tab_right_unselected"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:id="@+id/l_text_right"
                       android:layout_centerInParent="true"
                       android:textSize="20sp"
                       android:text="视频"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </RelativeLayout>
           </LinearLayout>
            <ImageView
                android:src="@mipmap/search_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/l_category_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:id="@+id/l_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
